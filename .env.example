# Here & Hear AI Service Configuration

# Application Settings
APP_NAME="Here & Hear AI Service"
DEBUG=False

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here

# Twilio for Phone Integration
TWILIO_ACCOUNT_SID=your_twilio_account_sid_here
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here

# Speech Processing Settings
SPEECH_RECOGNITION_ENGINE=openai
WHISPER_MODEL=base
AUDIO_SAMPLE_RATE=16000
AUDIO_CHUNK_SIZE=1024
DEFAULT_LANGUAGE=en-GB
DEFAULT_LOCALE=en-GB

# Real-time Processing
REALTIME_BUFFER_SIZE=4096
TRANSCRIPTION_CONFIDENCE_THRESHOLD=0.7 

# Database Configuration
DATABASE_URL=sqlite:///./here_hear.db
REDIS_URL=redis://localhost:6379
